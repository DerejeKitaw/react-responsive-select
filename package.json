{
  "name": "react-responsive-select",
  "version": "0.0.1",
  "description": "React Responsive Select",
  "main": "./dist/ReactResponsiveSelect.js",
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.demo.js --progress --host 0.0.0.0 --port 3001",
    "build": "webpack -p --config webpack.config.demo.js && webpack -p --config webpack.config.react-responsive-select.js ",
    "demo": "npm run build && serve --port 3002",
    "deploy": ".bin/deploy.sh",
    "eslint": "eslint demo.js src/**",
    "test": "npm run eslint && mocha --compilers js:babel-register --require mocha/jsdom-setup.js 'src/**/*__test__.js'",
    "coverage": "rm -rf coverage && NODE_ENV=test nyc mocha 'src/**/*__test__.js'"
  },

  "nyc": {
    "require": [ "babel-register", "./mocha/jsdom-setup.js" ],
    "exclude": [ "src/**/*__test__.js", "test" ],
    "reporter": [ "lcov", "text-summary" ],
    "report-dir": "./coverage",
    "sourceMap": false,
    "instrument": false,
    "check-coverage": true,
    "watermarks": {
      "lines": [100, 100],
      "functions": [100, 100],
      "branches": [100, 100],
      "statements": [100, 100]
    }
  },

  "author": "Ben Bowes <bb@benbowes.com>",
  "repository" : {
    "type": "git",
    "url": "https://github.com/benbowes/react-responsive-select"
  },
  "license": "MIT",
  "private": true,

  "devDependencies": {

    "react": "15.3.x",
    "react-dom": "15.3.x",
    "react-addons-test-utils": "15.3.x",

    "babel-core": "6.22.x",
    "babel-loader": "6.2.x",
    "css-loader": "0.23.x",
    "style-loader": "0.13.x",
    "babel-preset-es2015": "6.22.x",
    "babel-preset-react": "6.22.x",
    "babel-preset-stage-1": "6.22.x",

    "eslint": "2.11.x",
    "eslint-plugin-babel": "3.2.x",
    "eslint-plugin-react": "5.0.x",
    "eslint-plugin-import": "1.0.x",
    "babel-eslint": "4.1.x",
    "estraverse-fb": "1.3.x",

    "jsdom": "9.8.x",
    "mocha": "3.0.x",
    "sinon": "1.17.x",
    "chai": "3.5.x",
    "enzyme": "2.7.x",
    "babel-plugin-istanbul": "3.1.x",
    "nyc": "10.1.x",

    "webpack": "2.2.x",
    "webpack-dev-server": "2.3.x",

    "serve": "5.0.x"

  }
}
