{
  "name": "react-responsive-select",
  "version": "0.4.2",
  "description": "A React responsive select and multiselect form control",
  "main": "dist/ReactResponsiveSelect.js",
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "webpack-dev-server --config webpack.config.demo.js --progress --host 0.0.0.0 --port 3001",
    "start:demo": "npm run build:rrs && npm run build:demo && serve --port 3002",
    "build": "npm run build:rrs && npm run build:demo",
    "build:rrs": "webpack -p --config webpack.config.react-responsive-select.js",
    "build:demo": "webpack -p --config webpack.config.demo.js",
    "deploy": ".bin/deploy.sh",
    "eslint": "eslint demo.js src/**",
    "test": "npm run eslint && mocha --compilers js:babel-register --require mocha/jsdom-setup.js 'src/**/*__test__.js'",
    "testSingle": "echo $test && mocha --compilers js:babel-register --require mocha/jsdom-setup.js src/**/*$test*__test__.js -w",
    "coverage": "rm -rf coverage && NODE_ENV=test nyc mocha 'src/**/*__test__.js'"
  },
  "nyc": {
    "require": [
      "babel-register",
      "./mocha/jsdom-setup.js"
    ],
    "exclude": [
      "src/**/*__test__.js",
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "report-dir": "./coverage",
    "sourceMap": false,
    "instrument": false,
    "check-coverage": true,
    "watermarks": {
      "lines": [
        100,
        100
      ],
      "functions": [
        100,
        100
      ],
      "branches": [
        100,
        100
      ],
      "statements": [
        100,
        100
      ]
    }
  },
  "author": "Ben Bowes <bb@benbowes.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/benbowes/react-responsive-select"
  },
  "keywords": [
    "react",
    "component",
    "responsive",
    "mobile",
    "touch",
    "select",
    "dropdown",
    "form",
    "input",
    "multiselect"
  ],
  "license": "MIT",
  "devDependencies": {
    "babel-core": "6.22.x",
    "babel-eslint": "4.1.x",
    "babel-loader": "6.2.x",
    "babel-plugin-istanbul": "3.1.x",
    "babel-preset-es2015": "6.22.x",
    "babel-preset-react": "6.22.x",
    "babel-preset-stage-1": "6.22.x",
    "chai": "3.5.x",
    "css-loader": "0.23.x",
    "deep-freeze": "0.0.1",
    "enzyme": "2.7.x",
    "eslint": "2.11.x",
    "eslint-plugin-babel": "3.2.x",
    "eslint-plugin-import": "1.0.x",
    "eslint-plugin-react": "5.0.x",
    "estraverse-fb": "1.3.x",
    "jsdom": "9.8.x",
    "mocha": "3.0.x",
    "nyc": "10.1.x",
    "react": "15.3.x",
    "react-addons-test-utils": "15.3.x",
    "react-dom": "15.3.x",
    "serve": "5.0.x",
    "sinon": "1.17.x",
    "style-loader": "0.13.x",
    "webpack": "2.2.x",
    "webpack-dev-server": "2.3.x"
  }
}
